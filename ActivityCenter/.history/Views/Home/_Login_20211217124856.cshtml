@model LoginUser

<h3 class="text-center">Login</h3>
<hr />
<form asp-action="Login" method="post">

    <div class="form-group">
        <label asp-for="LoginEmail">Email</label>
        <input asp-for="LoginEmail" class="form-control" />
        <span asp-validation-for="LoginEmail"></span>
    </div>

    <div class="form-group">
        <label asp-for="LoginPassword">Password</label>
        <input asp-for="LoginPassword" type="password" class="form-control" />
        <span asp-validation-for="LoginPassword"></span>
    </div>

    <button class="btn btn-outline-primary">Login</button>
</form>